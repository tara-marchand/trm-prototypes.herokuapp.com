<div class="contractors-view">
    <ul></ul>
    <input type="text" class="new-contractor" placeholder="New Contractor">
    <button class="add-contractor">Add Contractor</button>
	<div class="small spinner"><div>Loadingâ€¦</div></div>
</div>

<script type="text/template" class="contractor-view">
    <form class="form-inline">
        <fieldset class="display-fields">
            <a href="#"><%= name %></a> <button class="delete">Delete</button>
        </fieldset>
        <fieldset class="edit-fields hidden">
            <div class="form-group">
                <label for="name<%= id %>">Name:</label>
                <input id="name<%= id %>" type="text" name="name" value="<%= name %>">
            </div>
            <div class="form-group">
                <label for="url<%= id %>">URL:</label>
                <input id="url<%= id %>" type="url" name="url" value="<%= url %>">
            </div>
            <hr>
            <div class="form-group">
                <button class="save">Save</button>
                <button class="cancel">Cancel</button>
            </div>
        </fieldset>
    </form>
</script>

